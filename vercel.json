{
    "version": 2,
    "builds": [
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "client/vite.config.ts",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "../server/public"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/v1/(.*)",
        "dest": "/server/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/client/index.html" 
      }
    ]
  }
  