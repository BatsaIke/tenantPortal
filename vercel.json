{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "../server/public"
        }
      },
      {
        "src": "server/src/index.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/v1/(.*)",
        "dest": "/server/src/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/server/public/index.html"
      }
    ]
  }
  