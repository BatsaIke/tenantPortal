{
    "version": 2,
    "builds": [
      {
        "src": "client/vite.config.ts",
        "use": "@vercel/static-build",
        "config": { "distDir": "../server/public" }
      },
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/v1/(.*)", "dest": "server/index.ts" },
      { "src": "/(.*)", "dest": "/public/index.html" }
    ]
  }
  